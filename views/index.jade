extends layout

block nav-content
  li.active
    a(href='/') Home

block content
  h1= title
  h3 Recently Played
  ul.unstyled
    each tube in tubes
      div
        a(href="/download/#{tube.video_id}")
          iframe(width='420', height='245', src='http://www.youtube.com/embed/#{tube.video_id}')
          span Launch video!
